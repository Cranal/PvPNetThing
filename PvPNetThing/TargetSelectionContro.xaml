<UserControl x:Class="PvPNetThing.TargetSelectionContro"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Head" VerticalAlignment="Center"/>
        <RadioButton Grid.Row="0" Grid.Column="1" IsChecked="{Binding Path=Head}" VerticalAlignment="Center"/>

        <Label Grid.Row="1" Grid.Column="0" Content="Torso" VerticalAlignment="Center"/>
        <RadioButton Grid.Row="1" Grid.Column="1" IsChecked="{Binding Path=Torso}" VerticalAlignment="Center"/>

        <Label Grid.Row="2" Grid.Column="0" Content="Arms" VerticalAlignment="Center"/>
        <RadioButton Grid.Row="2" Grid.Column="1" IsChecked="{Binding Path=Arms}" VerticalAlignment="Center"/>

        <Label Grid.Row="3" Grid.Column="0" Content="Legs" VerticalAlignment="Center"/>
        <RadioButton Grid.Row="3" Grid.Column="1" IsChecked="{Binding Path=Legs}" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
